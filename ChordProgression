import java.util.Scanner;

public class ChordProgression {

    public static String[] notes = { "C", "C#", "D", "D#", "E", "F", "F#", "G",
            "G#", "A", "A#", "B" };

    public static String generateChorus(int position) {
        //generate chorus string
        return null;
    }

    public static void generateSong(int position) {

        String chorus = generateChorus(position);

        String v1 = generateVerse(position);

        String v2 = generateVerse(position);

    }

    public static void runProgram() {

        System.out.println("Pick a key for your song: ");

        Scanner input = new Scanner(System.in);

        String key = input.nextLine();

        //conversion to sharp if flat
        int position = -1;
        for (int x = 0; x < notes.length; x++) {

            if (notes[x].equals(key)) {

                position = x;

            }

        }

        generateSong(position);

        input.close();
    }

    public static String generateVerse(int position) {
        //generates string with verse chords
        return null;
    }

    public static void main(String[] args) {

        runProgram();

    }

}
